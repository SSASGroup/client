<!--pages/home/home.wxml-->
<view >
  <view class="weui-search-bar">
    <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
        <input type="text" class="weui-search-bar__input" placeholder="输入任务关键词等" bindtap='search' disabled='true'/>
      </view>
    </view>
  </view>

  <view>
    <block wx:for="{{resumes}}" wx:key="id">
    <i-panel>
      <i-cell title="{{item.title}}" label="{{item.description}}" value="{{item.reward}}" is-link bind:click='nvigateToDetail' id="{{index}}">
      </i-cell>
    </i-panel>
    </block>
  </view>
  <i-toast id='toast'/>
</view>